!!!
%html
  %head
    %meta{content: "IE=edge", 'http-equiv' => "X-UA-Compatible"}
    %meta{charset: "utf-8"}
    %meta{charset: "width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no", name: "viewport"}
    %title
      = current_page.data.title || "Hebrew Calendar"
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Lato:300,400'
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'
    = stylesheet_link_tag :site
    = javascript_include_tag  "//ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"
    = javascript_include_tag  "//cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js"
    = javascript_include_tag current_page.path.gsub(/\.html\z/, '')
    :javascript
      $(function(){
        moment.locale('en');
      });
  %body{class: page_classes}
    = yield
